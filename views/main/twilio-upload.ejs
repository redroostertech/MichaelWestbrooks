        <script>
            function readURL(input) {
                if (input.files && input.files[0]) {
                    var reader = new FileReader();

                    reader.onload = function (e) {
                        $('#preview'+input.id)
                            .attr('src', e.target.result);
                    };

                    reader.readAsDataURL(input.files[0]);
                }
            }

            var imageCount = 1;
            var maxCount = 3;

            function appendInput() {
                if (imageCount < maxCount) {
                    imageCount = imageCount + 1;
                    var input = '<div><div id="input-item" class="col-md-9" style="margin-bottom: 20px;"><div class="fallback"><img id="preview'+imageCount+'" style="max-height: 500px;" src="http://placehold.it/200x150" alt="..."><input id="'+imageCount+'" class="form-control" type="file" name="venueImage'+imageCount+'" accept="image/*" onchange="readURL(this);" multiple/><a href="#"  onclick="removeInput(this)" class="btn btn-orange fileinput-exists" data-dismiss="fileinput">Remove</a></div></div></div>';
                    console.log(imageCount);
                    $('#floors').val(imageCount);
                    $('#uploadCount').append(input);
                } else {
                    console.log('Ok');
                    alert('Error: You can only add up to 3 floorplans.');
                }
            }

            var sectionCount = 1;

            function appendSection() {
                sectionCount = sectionCount + 1;
                var input = '<div><div class="col-md-9" style="margin-bottom: 20px;"><input type="text" id="section'+sectionCount+'"  name="section'+sectionCount+'" class="form-control" placeholder="Section Name"><a class="btn btn-default" onclick="removeSection(this)" ><i class="pg-close"></i> Remove</a></div></div>';
                console.log(sectionCount);
                $('#sections').val(sectionCount);
                $('#sectionCount').append(input);
            }
            
            function removeInput(e) {
                imageCount = imageCount - 1;
                $('#floors').val(imageCount);
                e.parentNode.remove();
            }

            function removeSection(e) {
                sectionCount = sectionCount - 1;
                $('#sections').val(sectionCount);
                e.parentNode.remove();
            }
        </script>

