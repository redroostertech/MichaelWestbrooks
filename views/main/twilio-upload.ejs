                                                                <div>
                                                                    <img id="preview1" style="max-height: 500px;" src="http://placehold.it/200x150" alt="...">
                                                                    <input id="1" class="form-control" type="file" name="venueImage1" accept="image/*" onchange="readURL(this);" multiple/>
                                                                    <a class="btn btn-default" onclick="removeInput(this)" ><i class="pg-close"></i> Remove</a>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
